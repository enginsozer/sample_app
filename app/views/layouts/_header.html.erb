<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "sample app", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to '<i class="icon-home icon-white"></i> Home'.html_safe,    root_path %></li>
          <li><%= link_to '<i class="icon-question-sign icon-white"></i> Help'.html_safe,    help_path %></li>
          <% if signed_in? %>
            <li><%= link_to '<i class="icon-th-list icon-white"></i> Users'.html_safe, users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-wrench icon-white"></i> Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to '<i class="icon-user"></i> Profile'.html_safe, current_user %></li>
                <li><%= link_to '<i class="icon-edit"></i> Settings'.html_safe, edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to '<i class="icon-off"></i> Sign out'.html_safe, signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>